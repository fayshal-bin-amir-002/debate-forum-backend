generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String   @id @unique
  name      String
  password  String?
  image     String?
  debates   Debate[] @relation("UserDebates")
  arguments Argument[]
  votes     Vote[]
  createdAt DateTime @default(now())
} 

enum DebateStatus {
  Active
  Closed
}

model Debate {
  id          String     @id @default(uuid())
  title       String
  description String
  tags        String[]
  category    String
  duration    Int
  createdAt   DateTime   @default(now())
  endsAt      DateTime
  status      DebateStatus @default(Active)
  authorEmail String
  author      User        @relation("UserDebates", fields: [authorEmail], references: [email])
  arguments   Argument[]
}


enum ArgumentSide {
  Support
  Oppose
}

model Argument {
  id         String   @id @default(uuid())
  content    String
  side       ArgumentSide
  createdAt  DateTime @default(now())
  userEmail  String
  user       User     @relation(fields: [userEmail], references: [email])
  debateId   String
  debate     Debate   @relation(fields: [debateId], references: [id])
  votes      Vote[]
}

model Vote {
  id           String   @id @default(uuid())
  userEmail    String
  user         User     @relation(fields: [userEmail], references: [email])
  argumentId   String
  argument     Argument @relation(fields: [argumentId], references: [id])
  createdAt    DateTime @default(now())
}
